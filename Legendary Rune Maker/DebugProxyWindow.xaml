<Window x:Class="Legendary_Rune_Maker.DebugProxyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Legendary_Rune_Maker"
        mc:Ignorable="d"
        Title="DebugProxyWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <ListView x:Name="List" Grid.Row="0" MouseDoubleClick="List_MouseDoubleClick" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="70" />
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="Input" Grid.Column="0" />
            <Button Grid.Column="1" Click="Button_Click">Submit</Button>
        </Grid>
    </Grid>
</Window>
