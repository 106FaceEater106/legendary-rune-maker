<Window x:Class="Legendary_Rune_Maker.AutomationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Legendary_Rune_Maker"
        xmlns:properties="clr-namespace:Legendary_Rune_Maker.Properties"
        mc:Ignorable="d"
        Title="AutomationWindow" Height="424.624" Width="766.165" Style="{StaticResource LoLWindow}"
        Closing="Window_Closing" WindowStartupLocation="CenterScreen">

    <Window.Background>
        <ImageBrush Stretch="UniformToFill" ImageSource="{StaticResource BgBlue}" />
    </Window.Background>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <CheckBox Content="Auto-accept" HorizontalAlignment="Left" IsChecked="{Binding Path=AutoAccept, Source={x:Static properties:Settings.Default}}" />

        <CheckBox Grid.Row="1" IsChecked="{Binding Path=UploadOnLock, Source={x:Static properties:Settings.Default}}" VerticalAlignment="Center" HorizontalAlignment="Left"
                  Content="Upload on champion lock" Margin="0 5 0 0"/>
    </Grid>
</Window>
