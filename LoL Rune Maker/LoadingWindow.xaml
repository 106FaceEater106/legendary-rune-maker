<Window x:Class="Legendary_Rune_Maker.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Legendary_Rune_Maker"
        mc:Ignorable="d"
        Title="" Height="172.556" Width="309.398" ResizeMode="NoResize" Initialized="Window_Initialized"
        Background="#010A13" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Loading..." FontSize="25" Style="{StaticResource LoLText}" HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"/>

        <ProgressBar Grid.Row="1" x:Name="Progress" Maximum="1" Height="20" Margin="10 0 10 0" />

        <TextBlock Grid.Row="2" Text="This will only happen the first time you open the application."
                   TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" FontFamily="{StaticResource BeaufortBold}"
                   Foreground="{StaticResource Pressed}"/>
    </Grid>
</Window>
